<div class="container pt-3">
  <div class="row pt-3 align-self-center">
    <div class="col pt-5">
      <div class="d-flex justify-content-center">
        <%= form_with model: @player, action: 'update', method: :put,
                      class: "col-md-4 rounded shadow-lg" do |player| %>
          <div class="container">
            <div class="form-group">
              <h5>Como jogador, quantas campanhas você já jogou?</h5>
            </div>

            <div class="form-group">
              <%= player.number_field :campaigns, autofocus: true,
                                      class: "form-control" %>
            </div>

            <div class="form-check" align="left">
              <%= player.check_box :available, class: "form-check-input" %>
              <%= player.label "Disponível" %>
            </div>

            <%= player.submit 'ENVIAR', class: "btn btn-primary btn-block mb-2 font-weight-bold" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
