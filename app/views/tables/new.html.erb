<% if current_user.id.to_s != @admin_id %>
  <div class="text-danger text-center h3 mt-3">
    Você não tem permissão para estar aqui
  </div>
<% else %>

  <div class="container pt-4">
    <div class="row pt-3 align-self-center">
      <div class="col pt-0">
        <h2
          align="center"
          class="text-dark font-weight-bold mb-3">
          Crie sua mesa
        </h2>

        <div class="d-flex justify-content-center">
          <%= form_with model: @table, url: '/tables/', method: :post,
                        class: "col-md-4 rounded shadow-lg" do |t| %>

            <%= t.hidden_field :admin_id, value: @admin_id%>

            <div class="container">
              <div class="form-group mt-2" align="left">
                <label>Dê um nome para sua mesa:</label>
              </div>

              <div class="form-group">
                <%= t.text_field :name, autofocus: true, autocomplete: "name",
                                 class: "form-control", placeholder: "Nome da mesa" %>
              </div>

              <div class="form-group" align="left">
                <label>Número máximo de jogadores:</label>
              </div>

              <div class="form-group">
                <%= t.number_field :max_players, autofocus: true,
                                   class: "form-control" %>
              </div>

              <div class="form-group" align="left">
                <label>Descrição</label>
              </div>

              <div class="form-group">
                <%= t.text_area :description, autofocus: true,
                                autocomplete: "description",
                                class: "form-control",
                                placeholder: "Breve descrição da mesa",
                                style: "height: 100px"
                %>
              </div>

              <%= t.submit 'CRIAR', class: "btn btn-primary btn-block mb-2 font-weight-bold" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
